		// 랜덤 함수 이용 하여 숫자 맞추기
			Scanner sc= new Scanner(System.in);
			
			int n = (int)(Math.random()*100)+1;

			
			for(int i=0; i< n;i++) {
				System.out.print("1~100사이의 수를 선택 : ");
				int a = sc.nextInt();
				if(n == a) {
					System.out.printf("%d번만에 맞추셨습니다.", i+1);
					break;
					}
				else if( n > a )
						System.out.println("UP");
					else
						System.out.println("DOWN");
				
			
				}
		
    
